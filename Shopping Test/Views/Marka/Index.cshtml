
@model IEnumerable<Marka>;
@{
    ViewData["Title"] = "Marka";
}

<div class="container p-3">
<h1 class="alert fw-bold text-success text-center p-2">Marka</h1>
    <div class="divCenter cartsofCart shadow-lg mt-4">
    <div><a class="btn btn-primary ml-3 mt-2" asp-action="Modify">Create</a></div>
    <div class="col-11 mt-1">
        <table class="table table-hover rounded">
            <thead>
                <tr>
                    <th class="text-muted">Name</th>
                    <th class="text-muted d-flex justify-content-end">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td class="d-flex justify-content-end">
                            <div>
                                <a asp-action="Modify" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                                <a class="btn btn-danger delete" href="javascript:;" data-id="@item.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>
@section Scripts {
    <script>
       $(document).ready(function () {
           $(".delete").click(function () {
               var btn = $(this);
               var result = confirm("Are you sure to delete ?");
               if (result) {
                   $.ajax({
                       url: "/Marka/Delete/" + btn.data("id"),
                       type: "GET",
                       success: function () {
                           btn.parents("tr").fadeOut();
                       },
                       error: function () {
                           confirm("Some Thing is Wrong !");
                       }
                   });
               }
           });
       })
    </script>
}

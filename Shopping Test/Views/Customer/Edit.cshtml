@model ApplicationUser;
@{
    ViewData["Tilte"] = "Edit" + Model.UserName;
}

<h2 class="alert alert-light text-center text-muted">@Model.UserName</h2>

<div class=" container">
    <div class="row">
        <form asp-action="Edit" method="post" class="col-md-6">
            <div class="text-danger h4 mb-1" asp-validation-summary="All"></div>
            <div alt="Product" class="img-thubnail rounded mb-2" style="height:200px; width:200px;"
                 src="@($"{FileSettings.imagePath}/{FileSettings.imageUsers}/{Model.NameOfImage}")" />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="text-muted" asp-for="Email"></label>
                <input class="form-control" asp-for="Email" />
            </div>
            <div class="form-group">
                <label class="text-muted asp-for="FirstName""></label>
                <input class="form-control" asp-for="FirstName" />
            </div>
            <div class="form-group">
                <label class="text-muted" asp-for="LastName"></label>
                <input class="form-control" asp-for="LastName" />
            </div>

            <div class="form-group ">
                <input type="submit" class="btn btn-primary text-center" value="Save" />
                <a asp-action="Index" class="btn btn-secondary text-center">Back</a>
            </div>
        </form>
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
